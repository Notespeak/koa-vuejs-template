{
  "name": "koa.vuejs.template",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "prestart": "docker-compose up -d",
    "start": "cd ./api && ../node_modules/.bin/nodemon -e ts --exec '../node_modules/.bin/ts-node server.ts'",
    "migrations:run": "cd ./api && ts-node ../node_modules/.bin/typeorm migrations:run",
    "migrations:create": "cd ./api && ts-node ../node_modules/.bin/typeorm migrations:create -n",
    "test:api": "mocha --require ignore-styles --recursive api/build/api.test",
    "pretest:client": "./node_modules/typescript/bin/tsc -p ./web/",
    "test:client": "mocha --require ignore-styles --recursive web/build/web.test",
    "test": "npm run test:api && npm run test:web",
    "provision:production": "ansible-playbook -l production -i ./ops/hosts ./ops/provision.yml",
    "prerelease": "webpack --config ./web/webpack.config.production.js",
    "deploy:production": "npm run prerelease && ansible-playbook -l production -i ./ops/hosts ./ops/deploy.yml",
    "ssh:prod": "ssh `grep -A2 'production' ./ops/hosts | tail -n +2 | head -n 1`"
  },
  "author": "Brady Holt",
  "license": "MIT",
  "devDependencies": {
    "@types/bcrypt": "^1.0.0",
    "@types/chai": "^3.4.32",
    "@types/koa": "^2.0.39",
    "@types/mocha": "^2.2.31",
    "@types/node": "^7.0.22",
    "@types/nodemailer": "^1.3.32",
    "@types/webpack": "^2.2.15",
    "bootstrap": "^4.0.0-alpha.6",
    "chai": "^3.5.0",
    "cross-env": "^3.1.3",
    "source-map-loader": "^0.1.5",
    "style-loader": "^0.13.1",
    "stylus-loader": "^3.0.1",
    "ts-loader": "^2.0.3",
    "url-loader": "^0.5.8",
    "vue": "^2.3.3",
    "vue-class-component": "^5.0.1",
    "vue-loader": "^12.2.1",
    "vue-property-decorator": "^5.0.1",
    "vue-router": "^2.5.3",
    "vue-template-compiler": "^2.2.6"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "css-loader": "^0.28.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "html-webpack-plugin": "^2.22.0",
    "import": "^0.0.6",
    "jsonwebtoken": "^7.4.1",
    "koa": "^2.2.0",
    "koa-bodyparser": "^4.2.0",
    "koa-router": "^7.2.0",
    "koa-static": "^3.0.0",
    "koa-webpack-dev-middleware": "^1.4.6",
    "koa-webpack-hot-middleware": "^1.0.3",
    "mocha": "^3.0.2",
    "nodemailer": "^4.0.1",
    "nodemon": "^1.11.0",
    "pg": "^6.2.3",
    "reflect-metadata": "^0.1.10",
    "regenerator-runtime": "^0.10.5",
    "routing-controllers": "^0.7.0-alpha.14",
    "stylus": "^0.54.5",
    "ts-node": "^3.0.4",
    "typeorm": "^0.1.0-alpha.3",
    "typescript": "^2.2.2",
    "webpack": "^2.3.3",
    "webpack-dev-server": "^2.4.5",
    "webpack-hot-middleware": "^2.18.0",
    "whatwg-fetch": "^2.0.3"
  }
}
