{
  // Use IntelliSense to learn about possible Node.js debug attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug api/ (server)",
      "program": "${workspaceRoot}/node_modules/ts-node/dist/_bin.js",
      "args": [
        "server.ts"
      ],
      "cwd": "${workspaceRoot}/api",
      "protocol": "inspector"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug test/api (tests)",
      "program": "${workspaceRoot}/node_modules/.bin/_mocha",
      "args": [
        "--compilers",
        "ts:../../node_modules/ts-node/register",
        "index.ts"
      ],
      "cwd": "${workspaceRoot}/test/api",
      "protocol": "inspector",
      "env": {
        "NODE_CONFIG_DIR": "${workspaceRoot}/api/config"
      }
    },
    {
      "name": "Debug web test (Karma/Mocha tests)",
      "type": "chrome",
      "request": "launch",
      "runtimeExecutable": "${workspaceRoot}/node_modules/karma/bin/karma",
      "runtimeArgs": ["start", "${workspaceRoot}/test/unit/karma.conf.js", "--no-single-run"],
      "port": 9222,
      "sourceMaps": true,
      "timeout": 20000,
      "webRoot": "${workspaceRoot}/test/unit/build/"
    }
  ]
}
